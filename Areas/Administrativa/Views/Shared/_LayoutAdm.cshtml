                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Procurar" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Funcionario") || (ViewContext.RouteData.Values["controller"].ToString() == "Cargo") ? "menu-open" : "")">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Recursos Humanos
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Funcionario" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Funcionario") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Funcionários</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Cargo" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Cargo") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Cargos</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Curso") ? "menu-open" : "")">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Acadêmico
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Curso" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Curso") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Cursos</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-header">Configurações do Sistema</li>
                        <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Nacionalidade") ? "menu-open" : "")">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Captação
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Nacionalidade" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Nacionalidade") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nacionalidades</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item @((ViewContext.RouteData.Values["controller"].ToString() == "Disciplina" || 
                                                    ViewContext.RouteData.Values["controller"].ToString() == "Turno" || 
                                                    ViewContext.RouteData.Values["controller"].ToString() == "NivelEnsino" ||
                                                    ViewContext.RouteData.Values["controller"].ToString() == "MotivoDesistencia") ? "menu-open" : "")">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Acadêmico
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Disciplina" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Disciplina") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Disciplinas</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="Turno" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Turno") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Turnos</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Administrativa" asp-controller="NivelEnsino" asp-action="Index" class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "NivelEnsino") ? "active" : "")">
