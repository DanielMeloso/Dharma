@model List<Dharma.Models.Curso>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Administrativa" asp-controller="Home" asp-action="Index">Adm</a></li>
                    <li class="breadcrumb-item"><a href="#">Acadêmico</a></li>
                    <li class="breadcrumb-item active">Cursos</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@if (TempData["MSG_S"] != null)
{
    <div class="col-md-12">
        <p class="alert alert-success" style="margin-top:5px;">@TempData["MSG_S"]</p>
    </div>
}
@if (Model != null && Model.Count > 0)
{
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        <h3 class="card-title">
                            <i class="fas fa-tags"></i>
                            Cursos
                        </h3>
                    </div>
                    <div class="col-md-2">
                        <a asp-area="Administrativa" asp-controller="Curso" asp-action="Cadastrar" class="btn btn-block bg-gradient-success btn-xs">+ Cadastrar</a>
                    </div>
                </div>
            </div>
            <div class="card-body pad table-responsive">
                <table id="tabelaPadrao" class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th style="width:80px">Código</th>
                            <th>Nome</th>
                            <th style="width:50px"></th>
                            <th style="width:50px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model)
                        {
                            var cor = curso.Ativo ? "black" : "red";
                            
                            <tr style="color:@cor">
                                <td class="context-menu-one" id="@curso.Id">@curso.Id</td>
                                <td class="context-menu-one" id="@curso.Id">@curso.Nome</td>
                                <td class="text-center">
                                    <a asp-area="Administrativa" asp-controller="Curso" asp-action="Alterar" asp-route-id="@curso.Id">
                                        <span style="color:blue">
                                            <i class="far fa-edit"></i>
                                        </span>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="#" class="btn-excluir" onclick="confirmarExclusao(@curso.Id)">
                                        <span style="color:red">
                                            <i class="far fa-trash-alt"></i>
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th style="width:50px"></th>
                            <th style="width:50px"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}