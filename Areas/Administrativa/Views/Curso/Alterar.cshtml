@model Dharma.Models.Curso
@{
    ViewData["Title"] = "Alteração de Curso";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Administrativa" asp-controller="Home" asp-action="Index"> Adm</a></li>
                    <li class="breadcrumb-item"><a href="#">Acadêmico</a></li>
                    <li class="breadcrumb-item"><a asp-area="Administrativa" asp-controller="Curso" asp-action="Index"> Cursos</a></li>
                    <li class="breadcrumb-item active">@Model.Nome_Resumido</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Curso</h3>
        </div>
        <form method="post">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-sm-5">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome do Curso">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-sm-3">
                        <label asp-for="Nome_Resumido" class="form-label"></label>
                        <input asp-for="Nome_Resumido" class="form-control" placeholder="Nome resumido do Curso">
                        <span asp-validation-for="Nome_Resumido" class="text-danger"></span>
                    </div>

                    <div class="col-sm-2">
                        <label asp-for="Nivel_Ensino_Id" class="form-label"></label>
                        <select asp-for="Nivel_Ensino_Id" class="form-control" asp-items="@ViewBag.NiveisEnsino">
                            <option value="">Selecione</option>
                        </select>
                        <span asp-validation-for="Nivel_Ensino_Id" class="text-danger"></span>
                    </div>

                    <div class="col-sm-2">
                        <input asp-for="Ativo" type="checkbox" class="form-control" data-bootstrap-switch data-off-color="danger" data-on-color="success" data-on-text="Ativo" data-off-text="Inativo" data-size="small">
                        <span asp-validation-for="Ativo" class="text-danger"></span>
                    </div>

                </div>

            </div>
            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Séries</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="card-body pad table-responsive">
                            <table id="tabelaPadrao" class="table table-striped table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th style="width:80px">Código</th>
                                        <th>Nome</th>
                                        <th style="width:50px"></th>
                                        <th style="width:50px"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var serie in Model.Series)
                                    {
                                        <tr>
                                            <td class="context-menu-one" id="@serie.Id">@serie.Id</td>
                                            <td class="context-menu-one" id="@serie.Id">@serie.Descricao</td>
                                            <td class="text-center">
                                                    <a asp-area="Administrativa" asp-controller="Serie" asp-action="Alterar" asp-route-id="@serie.Id">
                                                    <span style="color:blue">
                                                        <i class="far fa-edit"></i>
                                                    </span>
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                    <a href="#" class="btn-excluir" onclick="confirmarExclusao(@serie.Id)">
                                                    <span style="color:red">
                                                        <i class="far fa-trash-alt"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Código</th>
                                        <th>Nome</th>
                                        <th style="width:50px"></th>
                                        <th style="width:50px"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Alterar</button>
            </div>


        </form>
    </div>
    <!-- /.card -->
</div>



